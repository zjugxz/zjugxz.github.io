<div class="news">
  {% comment %} 获取当前页面的语言，默认为 'en' {% endcomment %}
  {% assign current_lang = page.lang | default: 'en' %}
  {% comment %} 根据语言设置日期格式 {% endcomment %}
  {% if current_lang == 'zh' %}
    {% assign date_format = '%Y-%m-%d' %}
    {% assign no_news_text = "暂无新闻..." %}
  {% else %}
    {% assign date_format = '%b %d, %Y' %}
    {% assign no_news_text = "No news so far..." %}
  {% endif %}
  
  {% assign filtered_news = site.news | where: "lang", current_lang %}
  {% if filtered_news != blank %}
    {% assign news_size = filtered_news | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign news = filtered_news | reverse %}

        {% if include.limit and site.announcements.limit %}
          {% assign news_limit = site.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}

        {% for item in news limit: news_limit %}
          <tr>
            <th scope="row" style="width: 20%">
              {{ item.date | date: date_format }}
            </th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">
                  {{ item.title }}
                </a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>{{ no_news_text }}</p>
  {% endif %}
</div>
