@inproceedings{guo24mobicom, 
    abbr      =   {MobiCom'24},
    title     =   {{Exploring Biomagnetism for Inclusive Vital Sign Monitoring: Modeling and Implementation}}, 
    author    =   {Xiuzhen Guo and Long Tan and Tao Chen and Chaojie Gu and Yuanchao Shu and Shibo He and Yuan He and Jiming Chen and Longfei Shangguan}, 
    booktitle =   {ACM International Conference on Mobile Computing and Networking (MobiCom)}, 
